<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Базовая светлая тема приложения -->
    <style name="Theme.OpenFashion" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="android:indeterminateTint">@color/TitleActive</item>
        <item name="android:textColorLink">@color/Secondary</item>
        <item name="android:colorControlActivated">@color/Secondary</item>

        <!-- Фон и поверхность -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Цвет ошибки -->
        <item name="colorError">@color/colorError</item>

        <!-- Типография -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.OpenFashion.Title</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.OpenFashion.SubTitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.OpenFashion.SubTitle2</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.OpenFashion.Body.Large</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.OpenFashion.Body.Medium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.OpenFashion.Body.Small</item>
        <item name="textAppearanceButton">@style/TextAppearance.OpenFashion.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.OpenFashion.Caption</item>

        <!-- Скругления -->
        <item name="shapeAppearanceSmallComponent">@style/Shape.OpenFashion.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/Shape.OpenFashion.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/Shape.OpenFashion.LargeComponent</item>

        <!-- Стили виджетов -->
        <item name="materialButtonStyle">@style/Widget.OpenFashion.Button</item>
        <item name="radioButtonStyle">@style/Widget.OpenFashion.RadioButton</item>
        <!-- Заменили materialTextInputStyle на textInputStyle -->
        <item name="textInputStyle">@style/Widget.OpenFashion.TextInputLayout</item>
    </style>

    <style name="TextAppearance.OpenFashion" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/tenor_sans</item>
    </style>

    <!-- Типография -->
    <style name="TextAppearance.OpenFashion.Title" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.22</item>
    </style>
    <style name="TextAppearance.OpenFashion.SubTitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.12</item>
    </style>
    <style name="TextAppearance.OpenFashion.SubTitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.12</item>
    </style>
    <style name="TextAppearance.OpenFashion.Body.Large" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text2</item>
    </style>
    <style name="TextAppearance.OpenFashion.Body.Medium" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text2</item>
    </style>
    <style name="TextAppearance.OpenFashion.Body.Small" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text2</item>
        <item name="android:lineHeight">16sp</item>
    </style>
    <style name="TextAppearance.OpenFashion.TextError" parent="TextAppearance.OpenFashion.Body.Medium">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="TextAppearance.OpenFashion.TextClick" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/Primary</item>
    </style>
    <style name="TextAppearance.OpenFashion.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Background</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextAppearance.OpenFashion.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <!-- Скругления -->
    <style name="Shape.OpenFashion.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
    <style name="Shape.OpenFashion.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="Shape.OpenFashion.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- ProgressBar -->
    <style name="Widget.OpenFashion.progressBarHorizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
    </style>

    <!-- Кнопка -->
    <style name="Widget.OpenFashion.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingVertical">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:clipToOutline">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="shapeAppearance">@style/Shape.OpenFashion.MediumComponent</item>

        <item name="backgroundTint">@color/button_background_selector</item>
        <item name="android:textColor">@color/button_text_selector</item>
    </style>

    <style name="Widget.OpenFashion.TransparentButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="android:textColor">@color/TitleActive</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeWidth">1.3dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeColor">@color/GrayScale</item>
        <item name="android:buttonCornerRadius">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clipToOutline">true</item>
        <item name="android:paddingVertical">13dp</item>
        <item name="shapeAppearance">@style/Shape.OpenFashion.MediumComponent</item>
    </style>

    <style name="Widget.OpenFashion.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="android:textColor">@color/togge_button_text</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clipToOutline">true</item>
        <item name="shapeAppearance">@style/Shape.OpenFashion.MediumComponent</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/toggle_button_background</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <!-- TextInputLayout -->
    <style name="Widget.OpenFashion.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">#D4D4D4</item>
        <item name="hintTextColor">@color/Body</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="android:textColorHint">@color/Placeholder</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.OpenFashion.Caption</item>
        <item name="errorTextAppearance">@style/TextAppearance.OpenFashion.Caption</item>
    </style>

    <style name="Widget.OpenFashion.TextInputEditText" parent="TextAppearance.OpenFashion.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Body</item>
    </style>

    <style name="PinDot">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/pin_dot_background</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="KeyButton" parent="Widget.OpenFashion.Button">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/key_background</item>
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>
