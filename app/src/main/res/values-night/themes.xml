<!-- res/values-night/themes.xml -->
<resources>
    <!-- Тёмная тема приложения -->
    <style name="Theme.OpenFashion" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="android:indeterminateTint">@color/Secondary</item>
        <item name="android:textColorLink">@color/Secondary</item>

        <!-- Фон и поверхность -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Цвет ошибки -->
        <item name="colorError">@color/colorError</item>

        <!-- Типография -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.OpenFashion.Title</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.OpenFashion.SubTitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.OpenFashion.SubTitle2</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.OpenFashion.Body.Large</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.OpenFashion.Body.Medium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.OpenFashion.Body.Small</item>
        <item name="textAppearanceButton">@style/TextAppearance.OpenFashion.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.OpenFashion.Caption</item>

        <!-- Скругления -->
        <item name="shapeAppearanceSmallComponent">@style/Shape.OpenFashion.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/Shape.OpenFashion.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/Shape.OpenFashion.LargeComponent</item>

        <!-- Стили виджетов -->
        <item name="materialButtonStyle">@style/Widget.OpenFashion.Button</item>
        <!-- Заменили materialTextInputStyle на textInputStyle -->
        <item name="textInputStyle">@style/Widget.OpenFashion.TextInputLayout</item>
    </style>
</resources>
